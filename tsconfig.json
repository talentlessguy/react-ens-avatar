{
	"compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"moduleResolution": "node",
		"preserveSymlinks": true,
		"jsx": "preserve",
		"incremental": true,
		"declaration": true,
		"declarationDir": "dist",
		"allowSyntheticDefaultImports": true,
    "skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
